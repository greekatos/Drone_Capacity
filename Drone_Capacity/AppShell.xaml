    xmlns:local="clr-namespace:Drone_Capacity"
    xmlns:views="clr-namespace:Drone_Capacity.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">


    <ShellContent
        Title="Crobit"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage"
        Shell.TabBarIsVisible="False"/>

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage"
        Shell.TabBarIsVisible="False"/>

    <ShellContent
        Title="Register"
        ContentTemplate="{DataTemplate views:RegisterPage}"
        Route="RegisterPage"
        Shell.TabBarIsVisible="False"/>
    
    <!-- Bottom-tab menu -->
