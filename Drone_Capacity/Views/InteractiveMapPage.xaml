<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mapsui="clr-namespace:Mapsui.UI.Maui;assembly=Mapsui.UI.Maui"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="Drone_Capacity.Views.InteractiveMapPage"
    Title="Field Map">

    <Grid RowDefinitions="Auto, *"
          x:Name="RootGrid">

        <!-- 1) Fixedâ€height header toolbar -->
        <HorizontalStackLayout
            Grid.Row="0"
            Padding="25"
            Spacing="16"
            BackgroundColor="#80000000"
            VerticalOptions="Start"
            HorizontalOptions="Center"
            Grid.ZIndex="1">

            <ImageButton
                Source="back_button.png"
                HeightRequest="20" WidthRequest="20"
                Padding="5"
                BackgroundColor="White"
                CornerRadius="20"
                Command="{Binding BackCommand}"/>

            <ImageButton
                Source="close_button.png"
                HeightRequest="20" WidthRequest="20"
                Padding="5"
                BackgroundColor="White"
                CornerRadius="20"
                Command="{Binding CloseCommand}"/>

            <ImageButton
                Source="gps_icon.png"
                HeightRequest="20" WidthRequest="20"
                Padding="5"
                BackgroundColor="White"
                CornerRadius="20" />

            <ImageButton
                Source="next_page_button.png"
                HeightRequest="20" WidthRequest="20"
                Padding="5"
                BackgroundColor="White"
                CornerRadius="20"
                Command="{Binding MyFieldsDetailsCommand}"/>

        </HorizontalStackLayout>

        <!-- 2) Map block with specific height -->
        <mapsui:MapControl
            Grid.Row="0"
            Grid.RowSpan="2"
            x:Name="MapView" 
            VerticalOptions="FillAndExpand"
            HorizontalOptions="FillAndExpand" 
            Grid.ZIndex="0"/>

    </Grid>
</ContentPage>
